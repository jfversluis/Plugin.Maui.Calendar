<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plugin.Maui.CalendarStore.Sample.CalendarsPage"
			 Title="Load Calendars">

	<VerticalStackLayout Spacing="10" Margin="10">
		<Button Text="Load Calendars" Clicked="Button_Clicked_Calendars" />

		<VerticalStackLayout BindableLayout.ItemsSource="{Binding Calendars}" Spacing="5">
			<BindableLayout.ItemTemplate>
				<DataTemplate>
					<VerticalStackLayout>
						<HorizontalStackLayout Spacing="10">
							<BoxView Color="{Binding Color}" WidthRequest="20" HeightRequest="20" />
							<Label Text="{Binding Name, StringFormat='Name: {0}'}" FontSize="25" />
						</HorizontalStackLayout>
						<Label Text="{Binding Id, StringFormat='ID: {0}'}" Margin="30,0,0,0" />
					</VerticalStackLayout>
				</DataTemplate>
			</BindableLayout.ItemTemplate>
		</VerticalStackLayout>
	</VerticalStackLayout>
</ContentPage>
